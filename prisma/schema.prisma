enum TransactionType {
  STRIPE_PAYMENT  // Payment via Stripe
  WALLET_TOPUP    // Adding money to wallet
  BOOKING_PAYMENT // Payment for booking
  WALLET_REFUND   // Refund to wallet
  CASHBACK        // Cashback/delivery bonus
  COMMISSION      // Commission earned
  WALLET_WITHDRAW // Withdraw from wallet
  PLATFORM_PAYOUT // Platform Payout
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Transaction {
  id          String      @id @default(cuid())
  type        TransactionType
  amount      Decimal
  status      TransactionStatus @default(COMPLETED)
  description String?
  reference_id String? // Stripe payment intent ID or booking ID
  
  // Foreign keys
  user_id      String 
  wallet_id    String?
  booking_id   String?
  
  // Timestamps
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  
  // Relationships
  // user        User    @relation(fields: [userId], references: [id])
  // wallet      Wallet? @relation(fields: [walletId], references: [id])
  // booking     Booking? @relation(fields: [bookingId], references: [id])
  
  @@index([user_id])

  @@map("transactions")
}


